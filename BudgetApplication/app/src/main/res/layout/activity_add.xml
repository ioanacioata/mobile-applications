<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ioana.budgetapplication.ui.AddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.ioana.budgetapplication.ui.DetailsActivity">

        <TextView
            android:id="@+id/addProductNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/nameToAddEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:selectAllOnFocus="false"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/addProductPriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/priceToAddEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="false"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/addProductSupermarketTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supermarket :"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/supermarketToAddSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/addProductBrandTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brand:"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/brandToAddEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:selectAllOnFocus="false"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/addProductImageView"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            app:srcCompat="@drawable/cola5" />

        <Button
            android:id="@+id/saveButtonAddWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_margin="10dp"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
